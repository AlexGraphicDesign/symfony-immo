{% extends 'base.html.twig' %}

{% block title %}Programmes immobiliers neufs{% endblock %}

{% block body %}

<section class="py-2">
    <div class="container">
        <div class="grid sm:grid-cols-none md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for program in programs %}
            <article class="flex flex-col flex-shrink-0 bg-white shadow-lg rounded-3xl overflow-hidden tracking-wide">
                <img class="w-full h-auto rounded-3xl" loading="lazy" src="{{ program.featuredImage }}" alt="{{ program.name }}">
                <div class="mt-1 p-4 text-base leading-normal space-y-4 sm:leading-7">
                    <h2 class="font-bold mb-2">{{ program.title }}</h2>
                    <p class="text-gray-800">{{ program.name }}</p>
                    <p class="text-gray-800">{{ program.description }}</p>
                    <p>{{ program.actability|date("m/d/Y") }}</p>
                    <a href="{{ path('app_program.show', {slug: program.slug}) }}">Voir</a>
                </div>
            </article>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
